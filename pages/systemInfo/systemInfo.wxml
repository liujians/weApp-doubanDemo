<!-- systemInfo.wxml -->
<view class="padding" style="margin-top:40rpx;">
	<button class="wa-success" bindtap="getSys" style="float:left;width:48%;">显示系统信息</button>
	<button class="wa-success" bindtap="getNetwork" style="float:right;width:48%;">显示网络状态</button>
</view>
<view style="clear:both;"></view>
<view class="rectangle"></view>
<view class="padding" style="line-height:50rpx;margin-top:30rpx;">
	<view>手机型号：{{sys.model}}</view>
	<view>设备像素比：{{sys.pixelRatio}}</view>
	<view>窗口宽度：{{sys.windowWidth}}</view>
	<view>窗口高度：{{sys.windowHeight}}</view>
	<view>微信设置的语言：{{sys.language}}</view>
	<view>微信版本号：{{sys.version}}</view>
	<view>网络状态：{{network}}</view>
</view>
