<!-- audio.wxml -->
<view class="text-center">
	<audio poster="{{poster}}" name="{{name}}" author="{{author}}" src="{{src}}" id="myAudio" controls loop></audio>
</view>

<view class="padding">
	<button class="wa-button wa-success wa-button-block" bindtap="audioPlay">播放</button>
	<button class="wa-button wa-success wa-button-block" bindtap="audioPause">暂停</button>
	<button class="wa-button wa-success wa-button-block" bindtap="audio14">设置当前播放时间为14秒</button>
	<button class="wa-button wa-success wa-button-block" bindtap="audioStart">回到开头</button>
</view>