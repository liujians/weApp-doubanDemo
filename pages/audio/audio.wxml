<!-- audio.wxml -->
<view class="text-center" style="margin-top:50rpx;margin-bottom:30rpx;">
	<audio poster="{{poster}}" name="{{name}}" author="{{author}}" src="{{src}}" id="myAudio" controls loop></audio>
</view>

<view class="padding" style="">
	<button class="wa-button wa-success wa-button-block" bindtap="audioPlay" style="margin-bottom:20rpx;">播放</button>
	<button class="wa-button wa-success wa-button-block" bindtap="audioPause"style="margin-bottom:20rpx;">暂停</button>
	<button class="wa-button wa-success wa-button-block" bindtap="audio14"style="margin-bottom:20rpx;">设置当前播放时间为14秒</button>
	<button class="wa-button wa-success wa-button-block" bindtap="audioStart"style="margin-bottom:20rpx;">回到开头</button>
</view>