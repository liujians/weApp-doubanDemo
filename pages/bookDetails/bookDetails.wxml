<!-- movieDetails.wxml -->
<view>
	<view class="padding" style="display:flex">
		<image class="listImg" src="{{msg.images.medium}}" mode="aspectFit"></image>
		<view class="padding" style="flex:1;position:relative;">
			<view>{{msg.title}}</view>
			<view>评分：{{msg.rating.average}}</view>
			<view>出版社：{{msg.publisher}}</view>
			<view>出版日期：{{msg.pubdate}}</view>
			<view>价格：{{msg.price}}元</view>
			<view>
				<span wx:for="{{msg.genres}}" wx:index="index">{{item}}<span wx:if="{{index<msg.genres.length-1}}">/</span></span>
			</view>
			<view style="width:100%">
				<view class="wa-button wa-button-sm wa-danger" style="position:absolute;bottom:0;">我想看</view>
			</view>
		</view>
	</view>
	<view class="padding">
		<view>
			<span wx:for="{{msg.author}}" wx:index="index">{{item}}<span wx:if="{{index<msg.author.length-1}}">/</span></span>
		</view>
		<view>
			作者：{{msg.author_intro}}
		</view>
	</view>
	<view >
		<view style="clear:both"></view>
		<view class="padding">{{msg.summary}}</view>
	</view>
</view>